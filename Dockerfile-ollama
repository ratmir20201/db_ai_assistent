FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    gnupg \
    lsb-release \
    && rm -rf /var/lib/apt/lists/*

RUN curl -fsSL https://ollama.com/install.sh | sh

RUN ollama serve & \
    sleep 3 && \
    ollama pull mistral

EXPOSE 11434

CMD ["sh", "-c", "ollama serve & wait $! && ollama run mistral"]
